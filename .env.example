# TEP Configuration Template
# Copy this file to .env and customize the values
# See DEPLOYMENT.md for detailed configuration instructions

# =============================================================================
# REQUIRED SETTINGS (must be set in production)
# =============================================================================

# Root administrator password
# IMPORTANT: Change this to a strong, unique password (minimum 12 characters)
ROOT_PASSWORD=ChangeThisToASecurePassword123!

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment mode: development, test, or production
# In production mode, ROOT_PASSWORD must be set
ENVIRONMENT=production

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Backend server port
BACKEND_PORT=8000

# CORS allowed origins (comma-separated)
# In production, restrict this to your actual frontend domain
# Example: https://tep.yourcompany.com
CORS_ORIGINS=http://localhost:4200

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# SQLite database URL
# Default locations:
#   Development: sqlite:///tep_dev.sqlite
#   Production: sqlite:///tep_prod.sqlite
# For custom location, use absolute path:
#   sqlite:///C:/TEP/data/tep.sqlite
DATABASE_URL=sqlite:///tep_prod.sqlite

# =============================================================================
# SECURITY SETTINGS (optional but recommended for production)
# =============================================================================

# Password for encrypting the JWT RSA private key
# If not set, the private key will be stored unencrypted
# Generate a secure random password for production
JWT_KEY_PASSWORD=

# =============================================================================
# LICENSE SETTINGS (managed by the application)
# =============================================================================

# License public key file path (relative to backend directory)
# Default: license_public_key.pem
# LICENSE_PUBLIC_KEY_PATH=license_public_key.pem
